// Recursive function tests
package main

func fib(n int) int {
    if n <= 1 {
        return n
    }
    return fib(n-1) + fib(n-2)
}

func gcd(a, b int) int {
    if b == 0 {
        return a
    }
    return gcd(b, a % b)
}

func main() {
    // Fibonacci
    assert(fib(0) == 0)
    assert(fib(1) == 1)
    assert(fib(2) == 1)
    assert(fib(5) == 5)
    assert(fib(10) == 55)
    
    // GCD
    assert(gcd(48, 18) == 6)
    assert(gcd(100, 25) == 25)
    assert(gcd(17, 13) == 1)
}
