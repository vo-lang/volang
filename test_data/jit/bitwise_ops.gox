// Bitwise operations
package main

func main() {
    // Bitwise AND
    assert((0b1100 & 0b1010) == 0b1000)
    assert((15 & 7) == 7)
    
    // Bitwise OR
    assert((0b1100 | 0b1010) == 0b1110)
    assert((8 | 4) == 12)
    
    // Bitwise XOR
    assert((0b1100 ^ 0b1010) == 0b0110)
    assert((15 ^ 3) == 12)
    
    // Left shift
    assert((1 << 4) == 16)
    assert((3 << 2) == 12)
    
    // Right shift
    assert((16 >> 2) == 4)
    assert((100 >> 3) == 12)
}
