// Negative number operations
package main

func main() {
    // Negative literals
    a := -5
    assert(a == -5)
    
    // Operations with negatives
    assert(-10 + 3 == -7)
    assert(-10 - 3 == -13)
    assert(-10 * 3 == -30)
    assert(-10 / 2 == -5)
    
    // Negate operator
    b := 10
    assert(-b == -10)
    assert(-(-b) == 10)
    
    // Mixed operations
    assert(-5 * -3 == 15)
    assert(-10 + -5 == -15)
    
    // Comparison with negatives
    assert(-5 < 0)
    assert(-5 < 5)
    assert(-3 > -5)
}
