// Control flow: if/else
package main

func abs(x int) int {
    if x < 0 {
        return -x
    }
    return x
}

func max(a, b int) int {
    if a > b {
        return a
    } else {
        return b
    }
}

func sign(x int) int {
    if x > 0 {
        return 1
    } else if x < 0 {
        return -1
    } else {
        return 0
    }
}

func main() {
    assert(abs(5) == 5)
    assert(abs(-5) == 5)
    assert(abs(0) == 0)
    
    assert(max(10, 20) == 20)
    assert(max(30, 15) == 30)
    assert(max(5, 5) == 5)
    
    assert(sign(10) == 1)
    assert(sign(-10) == -1)
    assert(sign(0) == 0)
}
