// For loop tests
package main

func sum_to_n(n int) int {
    sum := 0
    for i := 1; i <= n; i += 1 {
        sum += i
    }
    return sum
}

func factorial(n int) int {
    result := 1
    for i := 2; i <= n; i += 1 {
        result *= i
    }
    return result
}

func countdown(n int) int {
    count := 0
    for n > 0 {
        count += 1
        n -= 1
    }
    return count
}

func main() {
    // Sum 1 to 10 = 55
    assert(sum_to_n(10) == 55)
    assert(sum_to_n(1) == 1)
    assert(sum_to_n(0) == 0)
    
    // Factorial
    assert(factorial(5) == 120)
    assert(factorial(1) == 1)
    
    // Countdown
    assert(countdown(5) == 5)
    assert(countdown(0) == 0)
}
