// Test: Variable initialization with simple expressions
// Verifies that global variables are initialized correctly
package main

var simpleInt = 42
var simpleBool = true
var simpleString = "hello"

// init can modify globals after var initialization
func init() {
    simpleInt = simpleInt + 8  // 42 -> 50
}

func main() {
    assert(simpleInt == 50, "simpleInt should be 50 after init")
    assert(simpleBool == true, "simpleBool should be true")
    assert(simpleString == "hello", "simpleString should be hello")
    
    println("var_init_func: ALL TESTS PASSED")
}
