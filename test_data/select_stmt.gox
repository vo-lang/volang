// Test: select statement with channels
package main

var ch1 = make(chan int, 1)
var ch2 = make(chan int, 1)

func main() {
	// Test 1: select with default only
	select {
	default:
		// Expected path
	}
	
	// Test 2: select with ready recv channel
	ch1 <- 42
	
	select {
	case v := <-ch1:
		assert(v == 42, "should receive 42 from ch1")
	default:
		assert(false, "should receive from ch1")
	}
	
	// Test 3: select with default (no ready channel)
	select {
	case v := <-ch1:
		assert(false, "ch1 should be empty")
	default:
		// Expected path
	}
	
	// Test 4: select send case
	select {
	case ch2 <- 100:
		// Expected path - ch2 has buffer space
	default:
		assert(false, "should be able to send to ch2")
	}
	
	// Verify the send worked
	v := <-ch2
	assert(v == 100, "should receive 100 from ch2")
	
	println("select statement tests passed")
}
