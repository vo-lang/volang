package main

import "encoding/base64"

func main() {
    println("Testing base64...")
    
    // Test EncodeToString (standard encoding with padding)
    data := []byte{72, 101, 108, 108, 111}  // "Hello"
    encoded := base64.EncodeToString(data)
    assert(encoded == "SGVsbG8=", "EncodeToString")
    
    // Test DecodeString
    decoded, err := base64.DecodeString("SGVsbG8=")
    assert(err == nil, "DecodeString should not error")
    assert(len(decoded) == 5, "decoded length")
    
    // Test RawEncodeToString (no padding)
    rawEncoded := base64.RawEncodeToString(data)
    assert(rawEncoded == "SGVsbG8", "RawEncodeToString (no padding)")
    
    println("All base64 tests passed!")
}
