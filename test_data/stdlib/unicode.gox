package main

import "unicode"

func main() {
    println("Starting unicode tests...")
    
    // Test IsLetter
    assert(unicode.IsLetter('a'), "IsLetter('a')")
    assert(unicode.IsLetter('Z'), "IsLetter('Z')")
    assert(!unicode.IsLetter('5'), "!IsLetter('5')")
    
    // Test IsDigit
    assert(unicode.IsDigit('0'), "IsDigit('0')")
    assert(unicode.IsDigit('9'), "IsDigit('9')")
    assert(!unicode.IsDigit('a'), "!IsDigit('a')")
    
    // Test IsSpace
    assert(unicode.IsSpace(' '), "IsSpace(' ')")
    assert(unicode.IsSpace('\t'), "IsSpace('\\t')")
    assert(unicode.IsSpace('\n'), "IsSpace('\\n')")
    assert(!unicode.IsSpace('a'), "!IsSpace('a')")
    
    // Test IsUpper/IsLower
    assert(unicode.IsUpper('A'), "IsUpper('A')")
    assert(!unicode.IsUpper('a'), "!IsUpper('a')")
    assert(unicode.IsLower('a'), "IsLower('a')")
    assert(!unicode.IsLower('A'), "!IsLower('A')")
    
    // Test ToUpper/ToLower
    assert(unicode.ToUpper('a') == 'A', "ToUpper('a') == 'A'")
    assert(unicode.ToLower('A') == 'a', "ToLower('A') == 'a'")
    
    // Test IsControl
    assert(unicode.IsControl('\x00'), "IsControl(NUL)")
    assert(!unicode.IsControl('a'), "!IsControl('a')")
    
    println("All unicode tests passed!")
}

