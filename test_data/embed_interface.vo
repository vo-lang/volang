
// Test: interface embedding
package main

type Reader interface {
	Read() string
}

type Writer interface {
	Write(s string)
}

type ReadWriter interface {
	Reader
	Writer
}

// Implementation with value receivers
type Buffer struct {
	data string
}

func (b Buffer) Read() string {
	return b.data
}

func (b Buffer) Write(s string) {
	// Note: value receiver can't modify, just for interface test
}

func main() {
	var buf Buffer
	buf.data = "hello"
	
	// Buffer implements ReadWriter (through embedded interfaces)
	var rw ReadWriter = buf
	assert(rw.Read() == "hello", "rw.Read() should be hello")
	
	// Can assign to embedded interface types
	var r Reader = buf
	assert(r.Read() == "hello", "r.Read() should be hello")
	
	println("interface embedding tests passed")
}

