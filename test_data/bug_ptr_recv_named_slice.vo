// BUG: Pointer receiver on named slice type causes segfault
// Per spec (language.md:1064): "The receiver type can be T or *T (where T is a struct type)"
// This should be a compile-time error, not a runtime segfault
package main

type IntSlice []int

func (s *IntSlice) Append(v int) {
    *s = append(*s, v)
}

func main() {
    s := IntSlice{1, 2, 3}
    s.Append(4)
    assert(len(s) == 4, "len should be 4")
    println("bug_ptr_recv_named_slice: ok")
}
