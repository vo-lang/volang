// Control flow comprehensive test
package main;

func classifyNumber(n int) string {
    switch n {
    case 0:
        return "zero";
    case 1, 2, 3:
        return "small positive";
    case -1, -2, -3:
        return "small negative";
    default:
        if n > 0 {
            return "large positive";
        } else {
            return "large negative";
        }
    }
}

func fizzbuzz(n int) {
    for i := 1; i <= n; i += 1 {
        if i % 15 == 0 {
            println("FizzBuzz");
        } else if i % 3 == 0 {
            println("Fizz");
        } else if i % 5 == 0 {
            println("Buzz");
        } else {
            println(i);
        }
    }
}

func sumArray(arr []int) int {
    total := 0;
    for i := 0; i < len(arr); i += 1 {
        total += arr[i];
    }
    return total;
}

func findMax(arr []int) int {
    if len(arr) == 0 {
        return 0;
    }
    max := arr[0];
    for i := 1; i < len(arr); i += 1 {
        if arr[i] > max {
            max = arr[i];
        }
    }
    return max;
}

func bubbleSort(arr []int) {
    n := len(arr);
    for i := 0; i < n - 1; i += 1 {
        for j := 0; j < n - i - 1; j += 1 {
            if arr[j] > arr[j + 1] {
                temp := arr[j];
                arr[j] = arr[j + 1];
                arr[j + 1] = temp;
            }
        }
    }
}

func main() {
    println(classifyNumber(5));
    println(classifyNumber(-10));
    println(classifyNumber(0));
    
    fizzbuzz(20);
    
    numbers := []int{5, 2, 8, 1, 9, 3};
    println(sumArray(numbers));
    println(findMax(numbers));
    
    bubbleSort(numbers);
    for i := 0; i < len(numbers); i += 1 {
        println(numbers[i]);
    }
}
