package main

const (
    A = 1 << 10       // 1024
    B = 1 << 20       // 1048576  
    C = A + B         // 1049600
    D = 100 * 100     // 10000
    E = D / 10        // 1000
    F = 0xFF & 0x0F   // 15
    G = 3 | 4         // 7
    H = -42           // -42
)

func main() {
    assert(A == 1024, "A should be 1024")
    assert(B == 1048576, "B should be 1048576")
    assert(C == 1049600, "C should be 1049600")
    assert(D == 10000, "D should be 10000")
    assert(E == 1000, "E should be 1000")
    assert(F == 15, "F should be 15")
    assert(G == 7, "G should be 7")
    assert(H == -42, "H should be -42")
    
    println("const_test: ALL PASSED")
}
