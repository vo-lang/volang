package main

import "path"

func main() {
    println("Starting path tests...")
    
    // Test Base
    assert(path.Base("/a/b/c") == "c", "Base /a/b/c")
    assert(path.Base("/a/b/c.txt") == "c.txt", "Base with extension")
    
    // Test Dir
    assert(path.Dir("/a/b/c") == "/a/b", "Dir /a/b/c")
    
    // Test Ext
    assert(path.Ext("file.txt") == ".txt", "Ext .txt")
    assert(path.Ext("file") == "", "Ext no extension")
    
    // Test Clean
    assert(path.Clean("a/b/../c") == "a/c", "Clean with ..")
    assert(path.Clean("a/./b") == "a/b", "Clean with .")
    
    // Test IsAbs
    assert(path.IsAbs("/a/b"), "IsAbs true")
    assert(!path.IsAbs("a/b"), "IsAbs false")
    
    println("All path tests passed!")
}

