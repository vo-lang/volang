// Test: Package initialization features (Go spec compliance)
package main

// ============================================================
// Test 1: Multiple init() functions called in source order
// ============================================================
var initOrder []int

func init() {
    initOrder = append(initOrder, 1)
}

func init() {
    initOrder = append(initOrder, 2)
}

func init() {
    initOrder = append(initOrder, 3)
}

// ============================================================
// Test 2: Simple global variable initialization
// ============================================================
var globalA = 100
var globalB = 200

func main() {
    // Test 1: Multiple init functions in source order
    assert(len(initOrder) == 3, "Test 1a: should have 3 init calls")
    assert(initOrder[0] == 1, "Test 1b: first init adds 1")
    assert(initOrder[1] == 2, "Test 1c: second init adds 2")
    assert(initOrder[2] == 3, "Test 1d: third init adds 3")
    
    // Test 2: Global variables initialized
    assert(globalA == 100, "Test 2a: globalA should be 100")
    assert(globalB == 200, "Test 2b: globalB should be 200")
    
    println("package_init: ALL TESTS PASSED")
}
