package main

import (
	"fmt"
	"encoding/hex"
)

func main() {
    fmt.Println("Starting hex tests...")
    
    // Test EncodedLen / DecodedLen
    assert(hex.EncodedLen(3) == 6, "EncodedLen(3) should be 6")
    assert(hex.DecodedLen(6) == 3, "DecodedLen(6) should be 3")
    
    // Test EncodeToString
    data := []byte{72, 101, 108, 108, 111}  // "Hello" in decimal
    encoded := hex.EncodeToString(data)
    assert(encoded == "48656c6c6f", "EncodeToString failed")
    
    // Test DecodeString  
    decoded, err := hex.DecodeString("48656c6c6f")
    assert(err == nil, "DecodeString should not error")
    assert(len(decoded) == 5, "decoded length should be 5")
    assert(int(decoded[0]) == 72, "decoded[0] should be 72")
    
    fmt.Println("All hex tests passed!")
}
