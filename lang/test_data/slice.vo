package main


import "fmt"
func main() {
    // Test break: loop should stop at i==3
    breakCount := 0
    for i := 0; i < 10; i++ {
        if i == 3 {
            break
        }
        breakCount = breakCount + 1
    }
    assert(breakCount == 3, "break should stop after 3 iterations")
    
    // Test continue: skip i==2
    continueSum := 0
    for i := 0; i < 5; i++ {
        if i == 2 {
            continue
        }
        continueSum = continueSum + i
    }
    // sum of 0,1,3,4 = 8 (skipped 2)
    assert(continueSum == 8, "continue should skip i=2, sum should be 8")
    
    fmt.Println("slice_test: ALL PASSED")
}
