// Minimal reproduction: pointer receiver method on array element
// BUG: Causes "misaligned pointer dereference" panic in GC
package main


import "fmt"
type Point struct {
    X, Y int
}

func (p *Point) SetX(x int) {
    p.X = x
}

func main() {
    // This crashes with misaligned pointer in GC
    arr := [2]Point{{X: 1, Y: 2}, {X: 3, Y: 4}}
    arr[0].SetX(100)  // BUG: GC misaligned pointer
    assert(arr[0].X == 100, "array element method")
    fmt.Println("ok")
}
