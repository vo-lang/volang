import "fmt"
type Node struct {
	value int
	left  *Node
	right *Node
}

func (n *Node) sum() int {
	if n == nil {
		return 0
	}

	total := 0
	
    // 这个block 注释了就不crash
	if n.right != nil {
        fmt.Println(11111, n.right)
		total += n.right.sum()
	}
	return total
}

func makeTree(values []int) *Node {
	
    // 现在这个是 >=5会触发！
	for i := 1; i < 5; i++ {}    
	
    return &Node{value: values[0]}
}

