package main

import (
	"fmt"
	"iface"
)

// MyGreeter embeds iface.Greeter using qualified name
type MyGreeter interface {
    iface.Greeter  // qualified embedded interface
    Farewell() string
}

type Person struct {
    name string
}

func (p *Person) Greet() string {
    return "Hello, " + p.name
}

func (p *Person) Farewell() string {
    return "Goodbye, " + p.name
}

func main() {
    var g MyGreeter = &Person{name: "World"}
    fmt.Println(g.Greet())
    fmt.Println(g.Farewell())
    fmt.Println("[GOX:OK]")
}
