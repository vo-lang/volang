// Test: go statement with channels
package main


import "fmt"
var ch = make(chan int, 2)

func main() {
	go worker()
	go compute(10)
	
	// Wait for both goroutines
	r1 := <-ch
	r2 := <-ch
	
	// Results can arrive in any order
	sum := r1 + r2
	assert(sum == 21, "sum should be 21 (1 + 20)")
	
	fmt.Println("go statement tests passed")
}

func worker() {
	ch <- 1
}

func compute(n int) {
	ch <- n * 2
}

