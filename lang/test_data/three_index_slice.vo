package main


import "fmt"
func main() {
	// Test three-index slice on slice
	t := []int{0,1, 2, 3, 4, 5, 6, 7, 8}
    t0 := t[1:]
    s := t[:]
	
	// Two-index slice: cap extends to end
	s1 := s[1:4]
	fmt.Println("s1 len:", len(s1))  // 3
	fmt.Println("s1 cap:", cap(s1))  // 7
	
	// Three-index slice: cap = max - low
	s2 := s[1:4:6]
	fmt.Println("s2 len:", len(s2))  // 3
	fmt.Println("s2 cap:", cap(s2))  // 5 (6-1)
	
	// Three-index slice with low=0
	s3 := s[:3:5]
	fmt.Println("s3 len:", len(s3))  // 3
	fmt.Println("s3 cap:", cap(s3))  // 5
	
	// Verify values
	fmt.Println("s2[0]:", s2[0])  // 2
	fmt.Println("s2[1]:", s2[1])  // 3
	fmt.Println("s2[2]:", s2[2])  // 4
	
	// Test three-index slice on array
	var arr [8]int
	arr[0] = 10
	arr[1] = 20
	arr[2] = 30
	arr[3] = 40
	arr[4] = 50
	
	s4 := arr[1:3:4]
	fmt.Println("s4 len:", len(s4))  // 2
	fmt.Println("s4 cap:", cap(s4))  // 3 (4-1)
	fmt.Println("s4[0]:", s4[0])     // 20
	fmt.Println("s4[1]:", s4[1])     // 30
}
