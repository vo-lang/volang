// Test: goto statement
package main


import "fmt"
func main() {
	// 1. Forward goto
	x := 0
	goto skip
	x = 100
skip:
	assert(x == 0, "forward goto")
	
	// 2. Backward goto (loop simulation)
	count := 0
loop:
	count += 1
	if count < 5 {
		goto loop
	}
	assert(count == 5, "backward goto")
	
	// 3. Goto out of nested block
	result := 0
	for i := 0; i < 3; i += 1 {
		result += 1
		if i == 1 {
			goto done
		}
	}
done:
	assert(result == 2, "goto out of loop")
	
	fmt.Println("goto statement tests passed")
}
