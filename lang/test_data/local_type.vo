// Test: local type declarations inside functions
package main


import "fmt"
func main() {
    // Local struct type
    type Point struct {
        x int
        y int
    }
    
    // Use local type
    var p Point
    p.x = 10
    p.y = 20
    
    assert(p.x == 10, "p.x should be 10")
    assert(p.y == 20, "p.y should be 20")
    
    // Local type with composite literal
    p2 := Point{x: 30, y: 40}
    assert(p2.x == 30, "p2.x should be 30")
    assert(p2.y == 40, "p2.y should be 40")
    
    fmt.Println("local type declarations work correctly")
}

