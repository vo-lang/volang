package main


import "fmt"
func main() {
    // Test map creation and basic operations
    m := map[int]int{}
    
    // Test map assignment
    m[1] = 10
    m[2] = 20
    m[3] = 30
    
    // Test map access
    assert(m[1] == 10, "m[1] should be 10")
    assert(m[2] == 20, "m[2] should be 20")
    assert(m[3] == 30, "m[3] should be 30")
    
    // Test len
    assert(len(m) == 3, "len(m) should be 3")
    
    // Test delete
    delete(m, 2)
    assert(len(m) == 2, "len(m) after delete should be 2")
    
    // Test for-range: sum all keys and values
    keySum := 0
    valSum := 0
    for k, v := range m {
        keySum = keySum + k
        valSum = valSum + v
    }
    // After delete(m, 2): m has {1:10, 3:30}
    assert(keySum == 4, "key sum should be 4 (1+3)")
    assert(valSum == 40, "val sum should be 40 (10+30)")
    
    fmt.Println("map_test: ALL PASSED")
}
