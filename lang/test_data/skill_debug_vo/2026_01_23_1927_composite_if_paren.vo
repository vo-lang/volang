package main

type Point struct {
	x, y int
}

func (p Point) Sum() int {
	return p.x + p.y
}

func main() {
	// Go requires parentheses around composite literal in if condition
	if (Point{x: 1, y: 2}).Sum() > 0 {
		println("ok with parens")
	}
	
	// Alternative: assign to variable first
	p := Point{x: 3, y: 4}
	if p.Sum() > 0 {
		println("ok with variable")
	}
}
